<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:weightSum="20">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:clickable="true"
            android:onClick="onLogoutButtonClick"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="LOGOUT"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:gravity="center"
            android:paddingRight="20dp"
            android:text="Sprint 18"
            android:textColor="@android:color/white"
            android:textSize="22sp" />

    </LinearLayout>


    <com.example.leonardomorais.myapplication.Helper.SlidingTabLayout
        android:id="@+id/stl_tabs"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"></com.example.leonardomorais.myapplication.Helper.SlidingTabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_main_feed"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:background="@android:color/white"
        android:layout_weight="14"></android.support.v4.view.ViewPager>

        <TextView
        android:onClick="onAddButtonClick"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="+"
        android:textColor="@android:color/white"
        android:textSize="40sp" />

</LinearLayout>
