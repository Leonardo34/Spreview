<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:weightSum="20">

    <EditText
        android:id="@+id/et_cadastro_postit"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        android:background="@android:color/holo_blue_light"
        android:gravity="center"
        android:text="blal aisuauhshWWrobson é mt chato com os post it mano 30 por sprint cara eu nao aguento mais é muito post it  na moral foda....."
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="32sp" />

    <TextView
        android:onClick="onAddButtonClick"
        android:clickable="true"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/colorAccent"
        android:gravity="center_vertical"
        android:text="Salvar Post-It"
        android:textAlignment="center"
        android:textColor="@android:color/white" />

    <com.madrapps.pikolo.HSLColorPicker
        android:id="@+id/cadastro_color_picker"
        android:focusedByDefault="true"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"/>
</LinearLayout>
