<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="430dp"
    android:layout_marginTop="30pt"
    android:background="@android:color/holo_red_light"
    android:orientation="vertical"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="10">

        <View
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="8"></View>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:src="@drawable/ic_edition"></ImageView>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:src="@drawable/ic_close_action"></ImageView>

    </LinearLayout>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:background="@android:color/holo_red_light"
        android:gravity="center"
        android:text="blal aisuauhshWWrobson é mt chato com os post it mano 30 por sprint cara eu nao aguento mais é muito post it  na moral foda....."
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="32sp" />

</LinearLayout>